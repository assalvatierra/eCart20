@model eCart.Models.AccountLogin
@{
    ViewBag.Title = "Login";
}


<div class="row login-panel" style="margin-top:100px;">

    <div class="col-md-6 login-form" style="bottom:50px;left:40px;">
        <img src="~/img/placeholders/shopping-cart-colour-thumbnail.png"  class="login-image-side" />
    </div>

    <div class="col-md-6 login-form" style="top:0px;">
        <h2> <span style="color:royalblue;">Shopper</span> Login</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type="Password" } })
            </div>

            <button class="btn btn-default" type="submit"> Login </button>

            <div class="col-lg-12" style="top:50px;">

                <p> Create an account <a href="~/Shopper/Accounts/Register"> Here </a></p>
            </div>
            <br /><br />
        }
    </div>


</div>
