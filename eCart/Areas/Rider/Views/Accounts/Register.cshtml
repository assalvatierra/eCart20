@model eCart.Models.RiderRegistration

@{
    ViewBag.Title = "Login";
}


<div class="row register-panel" >
    <div class="register-form">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h1 style="color:royalblue;margin-left:90px;"> Rider </h1>
            <h3 style="margin-left:0px;"> Register for Rider Account</h3>
            <br />
            <div class="form-group">
                @*<input type="text" class="form-control" placeholder="email" />*@
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @*<input type="password" class="form-control" placeholder="password" />*@
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" , @type = "password" } })
            </div>

            <div class="form-group">
                <input type="password" class="form-control" placeholder="retype password" />
            </div>

            <hr />

            <div class="form-group">
                @*<input type="text" class="form-control" placeholder="Category" />*@
                <label class="control-label"> Name </label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label"> Mobile </label>
                @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label"> Mobile 2 </label>
                @Html.EditorFor(model => model.Mobile2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mobile2, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label"> Address </label>
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label"> City </label>
                @Html.DropDownList("MasterCityId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label"> Remarks </label>
                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
            </div>

            <button class="btn btn-success" type="submit"> Register </button>

        }
    </div>
</div>
