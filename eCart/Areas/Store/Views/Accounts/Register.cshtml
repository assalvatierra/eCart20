@model eCart.Models.StoreRegistration
@{
    ViewBag.Title = "Register";
}


<div class="row register-panel" >
   @using (Html.BeginForm())
    {
    <div class="register-form">
        <h1 style="color:royalblue;margin-left:90px;"> Store </h1>
        <h3 style="margin-left:30px;"> Register an Account</h3>
        <br />

        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label"> Username </label>
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "email" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Password </label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Re-type Password </label>
            @Html.EditorFor(model => model.Password2, new { htmlAttributes = new { @class = "form-control", @placeholder = "re-type password", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Password2, "", new { @class = "text-danger" })
        </div>

        <hr />
        <div class="form-group">
            <label class="control-label"> Store Name </label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Store" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Address </label>
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Address" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Store Category </label>
            @Html.DropDownList("StoreCategoryId", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label"> Store City </label>
            @Html.DropDownList("MasterCityId", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label"> Store Area </label>
            @Html.DropDownList("MasterAreaId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="control-label"> Remarks </label>
            @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", @placeholder = "Remarks" } })
        </div>
        <br />

        <button class="btn btn-success" value="Create" type="submit"> Register </button>
    </div>
    }

</div>
